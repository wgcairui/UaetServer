{
  "compilerOptions": {
    "allowUnreachableCode": true, // 不报告执行不到的代码错误。
    "allowUnusedLabels": true,
    "target": "es2018",
    "module": "ESNext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "esnext.asynciterable",
      "dom"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "noImplicitReturns": true,
    "strict": true,
    "noImplicitThis": true,
    "noEmit": true,
    "baseUrl": ".",
    "skipDefaultLibCheck": false,
    "paths": {
      "*": [
        "./types/*",
        "*"
      ],
      "@nuxtjs/auth": [
        "@types/nuxtjs__auth"
      ]
    },
    "types": [
      "@types/node",
      "@nuxt/types",
      "vue/types",
    ]
  },
  "exclude": [
    "node_modules"
  ]
}